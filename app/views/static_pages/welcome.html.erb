

<h1>Welcome <%=@first_name%></h1>
<p>  Voici notre site de petits (po)potins ! </p>

<p>Pour ajouter un potin clique ici : <%= link_to "Ajouter un potin", new_gossip_path,:class => "btn-danger btn p-1"%></p>

<div class="container-fluid">
<div class="row mt-3">
<% @gossip.each_with_index do |potin, i| %>
<div class="card border-primary mb-3" style="max-width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= potin.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= potin.user.first_name %></h6>
    <p class="card-text"> <%= potin.content %></p>
    <a href="gossip/<%= i+1%>" class="card-link"> Pour en savoir plus...</a>
  </div>
</div>
<% end %>